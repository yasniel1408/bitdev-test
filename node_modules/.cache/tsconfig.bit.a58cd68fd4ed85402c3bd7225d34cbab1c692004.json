{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.Iterable"
    ],
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "../../my-scope/mfes/banner/artifacts",
    "../../my-scope/mfes/footer/artifacts",
    "../../my-scope/mfes/button/artifacts",
    "../../my-scope/mfes/banner/public",
    "../../my-scope/mfes/footer/public",
    "../../my-scope/mfes/button/public",
    "../../my-scope/mfes/banner/dist",
    "../../my-scope/mfes/footer/dist",
    "../../my-scope/mfes/button/dist",
    "../../my-scope/mfes/banner/node_modules",
    "../../my-scope/mfes/footer/node_modules",
    "../../my-scope/mfes/button/node_modules",
    "../../my-scope/mfes/banner/package.json",
    "../../my-scope/mfes/footer/package.json",
    "../../my-scope/mfes/button/package.json",
    "../../my-scope/mfes/banner/**/*.cjs",
    "../../my-scope/mfes/footer/**/*.cjs",
    "../../my-scope/mfes/button/**/*.cjs",
    "../../my-scope/mfes/banner/./dist",
    "../../my-scope/mfes/footer/./dist",
    "../../my-scope/mfes/button/./dist"
  ],
  "include": [
    "../../my-scope/mfes/banner/**/*",
    "../../my-scope/mfes/footer/**/*",
    "../../my-scope/mfes/button/**/*",
    "../../my-scope/mfes/banner/**/*.json",
    "../../my-scope/mfes/footer/**/*.json",
    "../../my-scope/mfes/button/**/*.json",
    "./global-types/**/*"
  ]
}
{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.Iterable"
    ],
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "exclude": [
    "../../my-scope/apps/my-app/artifacts",
    "../../my-scope/apps/my-app/public",
    "../../my-scope/apps/my-app/dist",
    "../../my-scope/apps/my-app/node_modules",
    "../../my-scope/apps/my-app/package.json",
    "../../my-scope/apps/my-app/**/*.cjs",
    "../../my-scope/apps/my-app/./dist"
  ],
  "include": [
    "../../my-scope/apps/my-app/**/*",
    "../../my-scope/apps/my-app/**/*.json",
    "./global-types/**/*"
  ]
}
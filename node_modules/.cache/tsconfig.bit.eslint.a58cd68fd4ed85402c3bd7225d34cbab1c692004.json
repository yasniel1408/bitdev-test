{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.Iterable"
    ],
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "../../my-scope/components/banner/artifacts",
    "../../my-scope/components/button/artifacts",
    "../../my-scope/components/footer/artifacts",
    "../../my-scope/components/layout/artifacts",
    "../../my-scope/components/banner/public",
    "../../my-scope/components/button/public",
    "../../my-scope/components/footer/public",
    "../../my-scope/components/layout/public",
    "../../my-scope/components/banner/dist",
    "../../my-scope/components/button/dist",
    "../../my-scope/components/footer/dist",
    "../../my-scope/components/layout/dist",
    "../../my-scope/components/banner/node_modules",
    "../../my-scope/components/button/node_modules",
    "../../my-scope/components/footer/node_modules",
    "../../my-scope/components/layout/node_modules",
    "../../my-scope/components/banner/package.json",
    "../../my-scope/components/button/package.json",
    "../../my-scope/components/footer/package.json",
    "../../my-scope/components/layout/package.json",
    "../../my-scope/components/banner/**/*.cjs",
    "../../my-scope/components/button/**/*.cjs",
    "../../my-scope/components/footer/**/*.cjs",
    "../../my-scope/components/layout/**/*.cjs",
    "../../my-scope/components/banner/./dist",
    "../../my-scope/components/button/./dist",
    "../../my-scope/components/footer/./dist",
    "../../my-scope/components/layout/./dist"
  ],
  "include": [
    "../../my-scope/components/banner/**/*",
    "../../my-scope/components/button/**/*",
    "../../my-scope/components/footer/**/*",
    "../../my-scope/components/layout/**/*",
    "../../my-scope/components/banner/**/*.json",
    "../../my-scope/components/button/**/*.json",
    "../../my-scope/components/footer/**/*.json",
    "../../my-scope/components/layout/**/*.json",
    "./global-types/**/*"
  ]
}